<%= link_to '<i class="fa fa-file fa-fw" aria-hidden="true"></i> Online Report'.html_safe,  display_path(phase: "2", id: @phase2.id ), class: "button secondary float-right", :target => '_blank' %>

<div class="page-title">
    <h1><%= @phase2.created_at.to_formatted_s(:long)  %></h1>
    <nav aria-label="You are here:" role="navigation">
      <ul class="breadcrumbs">
        <li><%= link_to 'Businesses',  businesses_path %></li>
        <li>
            <%= link_to @business.name, business_path(@business) %>
        </li>
        <li>
          <span class="show-for-sr">Current: </span> Phase 2
        </li>
      </ul>
    </nav>
</div>

<div class="row">
    <div class="medium-8 columns">
        <div class="callout card">
            <div class="callout-header">
                <% if (current_user.userrank == 'admin') || (current_user.userrank == 'seo')  %>
                    <div class ="float-right">
                        <%= link_to '<i class="fa fa-pencil fa-fw" aria-hidden="true"></i> Edit'.html_safe,  edit_business_phase2_path(@business, @phase2.id), class: "button secondary small" %>
                        <%= link_to '<i class="fa fa-trash fa-fw" aria-hidden="true"></i> Delete'.html_safe, "#", method: :delete, class: "button secondary small",  data: { confirm: "You sure?" } %>
                    </div>
                <% end %>
                
                <h4><i class="fa fa-pie-chart fa-fw" aria-hidden="true"></i> Phase 2</h4>
            </div>
            <div class="callout-table">
                
                <table>
                <tr>
                    <th class="narrow">Home page title tag and meta description contain keywords and locations?</th>
                    <td><%= @phase2.titleHasKeywords %></td>
                </tr>
                <tr>
                    <th class="narrow">Home page content contains keywords and locations?</th>
                    <td><%= @phase2.copyHasKeywords %></td>
                </tr>
                <tr>
                    <th class="narrow">Landing pages/service pages optimized?</th>
                    <td><%= @phase2.optimized %></td>
                </tr>
                <tr>
                    <th class="narrow">Fresh content? Pages need to be updated?</th>
                    <td><%= @phase2.freshContent %></td>
                </tr>
                <tr>
                    <th class="narrow">Images named and tagged?</th>
                    <td><%= @phase2.imagesNamed %></td>
                </tr>
                <tr>
                    <th class="narrow">Social media profile integrated?</th>
                    <td><%= @phase2.socialMedia %></td>
                </tr>
                <tr>
                    <th class="narrow">Google Analytics?</th>
                    <td><%= @phase2.googleAnalytics %></td>
                </tr>
                <tr>
                    <th class="narrow">Search Console?</th>
                    <td><%= @phase2.webmasterTools %></td>
                </tr>
                <tr>
                    <th class="narrow">URLs short and user friendly?</th>
                    <td><%= @phase2.shortURL %></td>
                </tr>
                <tr>
                    <th class="narrow">Black Hat Free?</th>
                    <td><%= @phase2.blackHatFree %></td>
                </tr>
                </table>
            </div>
        </div>
    </div>
    
    <div class="medium-4 columns">
        <%= render 'scoreCard' %>
    </div>
</div>