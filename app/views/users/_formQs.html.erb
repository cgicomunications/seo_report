<div class="callout-table">
    <table>
        <tr>
            <th class="narrow"><%= f.label :username, "User Name" %></th>
            <td>
                <%= f.text_field :username %>
            </td>
        </tr>
        <tr>
            <th class="narrow"><%= f.label :email, "Email" %></th>
            <td>
                <%= f.text_field :email %>
            </td>
        </tr>
        <tr>
            <th class="narrow"><%= f.label :userrank, "App Permissions" %></th>
            <td>
                <%= f.select :userrank, options_for_select([['sales'],['seo'],['admin']])  %>
            </td>
        </tr>
        <tr>
            <th class="narrow"><%= f.label :password, "Password" %></th>
            <td>
                <%= f.password_field :password %>
            </td>
        </tr>
        <tr>
            <th class="narrow"><%= f.label :password_confirmation, "Confirm Password" %></th>
            <td>
                <%= f.password_field :password_confirmation %>
            </td>
        </tr>
    </table>
</div>