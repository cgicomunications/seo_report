<div class="page-title">
    <h1>New Business</h1>
    <h4 class="subheader">Add a Business</h4>
</div>


<div class="callout card">
    <div class="callout-header">
        <h4>Business Details</h4>
    </div>
    <div class="callout-table">
        
        <%= form_for @business do |f| %>
            <table>
                <tr>
                    <th><%= f.label :name %></th>
                    <td><%= f.text_field :name %></td>
                </tr>
                    <tr>
                        <th><%= f.label :vertical %></th>
                        <td><%= f.select(:vertical, options_from_collection_for_select(Vertical.all, "name", "name", @business.vertical)) %></td>
                    </tr>
                <tr>
                    <th><%= f.label :address %></th>
                    <td><%= f.text_field :address %></td>
                </tr>
                <tr>
                    <th><%= f.label :url %></th>
                    <td><%= f.text_field :url %></td>
                </tr>
                <tr>
                    <th class="narrow"><%= f.label "Client" %></th>
                    <td>
                        <%= f.radio_button :branding, 'Next' %> 
                        <%= f.label :branding, 'Next', :value => 'Next' %>
                        <%= f.radio_button :branding, 'CGI' %>
                        <%= f.label :branding, 'CGI', :value => 'CGI' %>
                    </td>
                </tr>
                <tr>
                    <td><%= f.submit 'Submit', class: "button secondary" %></td>
                </tr>
                </table>
        <% end %>
        
        

    </div>
</div>