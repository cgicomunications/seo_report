<div class="page-title">
    <h1><%= @business.name %></h1>
    <nav aria-label="You are here:" role="navigation">
      <ul class="breadcrumbs">
        <li><%= link_to 'Businesses',  businesses_path %></li>
        <li><%= link_to @business.name, @business %></li>
        <li>
          <span class="show-for-sr">Current: </span> Editing
        </li>
      </ul>
    </nav>
</div>

<div class="callout card">
    <div class="callout-header">
        <h4>Edit Business Stats</h4>
    </div>
    
    <div class="callout-table">
       
            <%= form_for @business, method: :patch do |f| %>
                <table>
                    <tr>
                        <th><%= f.label :name %></th>
                        <td><%= f.text_field :name %></td>
                    </tr>
                    <tr>
                        <th><%= f.label :vertical %></th>
                        <td><%= f.select(:vertical, options_from_collection_for_select(Vertical.all, "name", "name", @business.vertical)) %></td>
                    </tr>
                    <tr>
                        <th><%= f.label :address %></th>
                        <td><%= f.text_field :address %></td>
                    </tr>
                    <tr>
                        <th><%= f.label :url %></th>
                        <td><%= f.text_field :url %></td>
                    </tr>
                    <tr>
                        <td><%= f.submit 'Submit', class: "button secondary" %></td>
                    </tr>
                </table>
            <% end %>
       
        
        
    </div>
</div>
        