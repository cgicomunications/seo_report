<div class="page-title">
    <h1>Contact Us</h1><nav aria-label="You are here:" role="navigation">
      <ul class="breadcrumbs">
        <li>Contact</li>
        <li>
          <span class="show-for-sr">Current: </span> Contact Us
        </li>
      </ul>
    </nav>
</div>


<div class="callout card">
    <div class="callout-header">
        <h4>Let Us Know What You're Thinking</h4>
    </div>
    <div class="callout-body">

        <%= form_for @contact do |f| %>
        
            <div class="row">
                <div class="medium-6 columns">
                    <%= f.label :name %>
                    <%= f.text_field :name %>
                </div>
                <div class="medium-6 columns">
                    <%= f.label :email %>
                    <%= f.email_field :email %>
                </div>
            </div>
            
            <%= f.label :comments %>
            <%= f.text_area :comments %>
            
            <%= f.submit 'Submit', class: "button secondary" %>

        <% end %>

    </div>
</div>