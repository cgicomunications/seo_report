<div class="page-title">
  <h1>Phase 5</h1>

  <nav aria-label="You are here:" role="navigation">
    <ul class="breadcrumbs">
      <li>Phase 5</li>
      <li>
        <span class="show-for-sr">Current: </span> All
      </li>
    </ul>
  </nav>
</div>

<div class="callout card">
  <div class="callout-header">
    <h4>All Phase 5</h4>
  </div>

  <div class="callout-table">
    <table>
      <thead>
        <tr>
          <th>Date</th>
          <th>Business Name</th>
          <th>Responsive</th>
          <th>Contact Info</th>
          <th>Phone Number</th>
          <th>Directions</th>
          <th>Font Size</th>
          <th>Buttons</th>
          <th>Navigation</th>
          <th>Structure</th>
        </tr>
      </thead>

      <tbody>
        <% @phase5s.each do |phase5| %>
          <% @business = Business.where(:id => phase5.business_id).first %>

          <tr>
            <td><%= link_to phase5.created_at.to_formatted_s(:short),business_phase5_path(@business, phase5)  %></td>
            <td><%= @business.name %></td>
            <td><%= phase5.mobile_responsive %></td>
            <td><%= phase5.mobile_contact_info %></td>
            <td><%= phase5.mobile_phone_number %></td>
            <td><%= phase5.mobile_directions %></td>
            <td><%= phase5.mobile_font_size %></td>
            <td><%= phase5.mobile_buttons %></td>
            <td><%= phase5.mobile_navigation %></td>
            <td><%= phase5.mobile_structure %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
