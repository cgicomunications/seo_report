<%= link_to '<i class="fa fa-file fa-fw" aria-hidden="true"></i> Online Report'.html_safe,  display_path(phase: "5", id: @phase5.id ), class: "button secondary float-right", :target => '_blank' %>

<div class="page-title">
  <h1><%= @phase5.created_at.to_formatted_s(:long)  %></h1>

  <nav aria-label="You are here:" role="navigation">
    <ul class="breadcrumbs">
      <li><%= link_to 'Businesses',  businesses_path %></li>
      <li><%= link_to @business.name, business_path(@business) %></li>
      <li><span class="show-for-sr">Current: </span> Phase 5</li>
    </ul>
  </nav>
</div>

<div class="row">
  <div class="medium-8 columns">
    <div class="callout card">
      <div class="callout-header">
        <% if (current_user.userrank == 'admin') || (current_user.userrank == 'seo')  %>
          <div class ="float-right">
            <%= link_to '<i class="fa fa-pencil fa-fw" aria-hidden="true"></i> Edit'.html_safe,  edit_business_phase5_path(@business, @phase5.id), class: "button secondary small" %>
            <%= link_to '<i class="fa fa-trash fa-fw" aria-hidden="true"></i> Delete'.html_safe, "#", method: :delete, class: "button secondary small",  data: { confirm: "You sure?" } %>
          </div>
        <% end %>

        <h4><i class="fa fa-puzzle-piece fa-fw" aria-hidden="true"></i> Phase 5</h4>
      </div>

      <div class="callout-table">
        <table>
          <tbody>
            <tr>
              <th class="narrow">Is your website mobile responsive?</th>
              <td><%= @phase5.mobile_responsive %></td>
            </tr>
            <tr>
              <th class="narrow">Is the contact information on your mobile website above the fold?</th>
              <td><%= @phase5.mobile_contact_info %></td>
            </tr>
            <tr>
              <th class="narrow">Is the phone number on your mobile website click to call?</th>
              <td><%= @phase5.mobile_phone_number %></td>
            </tr>
            <tr>
              <th class="narrow">Does your mobile website have a click for directions feature?</th>
              <td><%= @phase5.mobile_directions %></td>
            </tr>
            <tr>
              <th class="narrow">Is the font of your mobile website too small to read without zooming?</th>
              <td><%= @phase5.mobile_font_size %></td>
            </tr>
            <tr>
              <th class="narrow">Are the buttons and links on your mobile website too close together?</th>
              <td><%= @phase5.mobile_buttons %></td>
            </tr>
            <tr>
              <th class="narrow">Is your mobile website easy to navigate?</th>
              <td><%= @phase5.mobile_navigation %></td>
            </tr>
            <tr>
              <th class="narrow">Is there still a structure and hierarchy to the content on your mobile website?</th>
              <td><%= @phase5.mobile_structure %></td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>

  <div class="medium-4 columns">
    <%= render 'scoreCard' %>
  </div>
</div>
