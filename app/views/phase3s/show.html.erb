<%= link_to '<i class="fa fa-plus-circle fa-fw" aria-hidden="true"></i> Online Report'.html_safe,  display_path(phase: "3", id: @phase3.id ), class: "button secondary float-right" %>


<div class="page-title">
    <h1><%= @phase3.created_at.to_formatted_s(:long)  %></h1>
    <nav aria-label="You are here:" role="navigation">
      <ul class="breadcrumbs">
        <li><%= link_to 'Businesses',  businesses_path %></li>
        <li>
            <% @business = Business.where(:id => @phase3.business_id).first %>
            <%= link_to @business.name, business_path(@business) %>
        </li>
        <li>
          <span class="show-for-sr">Current: </span> Phase 3
        </li>
      </ul>
    </nav>
</div>

<div class="row">
    <div class="medium-7 columns">
        <div class="callout card">
            <div class="callout-header">
                <div class ="float-right">
                    <%= link_to '<i class="fa fa-pencil fa-fw" aria-hidden="true"></i> Update'.html_safe,  edit_phase3_path, class: "button secondary small" %>
                    <%= link_to '<i class="fa fa-trash fa-fw" aria-hidden="true"></i> Delete'.html_safe, "#", method: :delete, class: "button secondary small",  data: { confirm: "You sure?" } %>
                </div>
                
                <h4><i class="fa fa-puzzle-piece fa-fw" aria-hidden="true"></i> Phase 3</h4>
            </div>
            <div class="callout-table">
                
                <table>
                    <tr>
                        <th class="narrow">XML Sitemap?</th>
                        <td><%= @phase3.xmlSitemap %></td>
                    </tr>
                    <tr>
                        <th class="narrow">Visitor Facing Sitemap?</th>
                        <td><%= @phase3.visitorSitemap %></td>
                    </tr>
                    <tr>
                        <th class="narrow">Internal Link Audit?</th>
                        <td><%= @phase3.internalAudit %></td>
                    </tr>
                        <th class="narrow">Contact Form?</th>
                        <td><%= @phase3.contactForm %></td>
                    </tr>
                    <tr>
                        <th class="narrow">Map?</th>
                        <td><%= @phase3.map %></td>
                    </tr>
                </table>
            </div>
        </div>
    </div>
</div>