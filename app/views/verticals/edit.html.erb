<div class="page-title">
    <h1>Verticals</h1>
    <nav aria-label="You are here:" role="navigation">
      <ul class="breadcrumbs">
        <li><%= link_to 'Verticals',  verticals_path %></li>
        <li>
          <span class="show-for-sr">Current: </span> Editing
        </li>
      </ul>
    </nav>
</div>

<div class="callout card">
    <div class="callout-header">
        <h4><i class="fa fa-bar-chart fa-fw" aria-hidden="true"></i> Vertical Details</h4>
    </div>
        
    <%= form_for @vertical do |f| %>
        
        <%= render :partial => "formQs", :locals=>{:f=>f} %>
    
        <div class="callout-footer padded">
            <%= f.submit 'Submit', class: "button secondary" %>
        </div>
    <% end %>
</div>