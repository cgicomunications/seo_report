<%= link_to '<i class="fa fa-file  fa-fw" aria-hidden="true"></i> Online Report'.html_safe,  display_path(phase: "1", id: @phase1.id ), class: "button secondary float-right", :target => '_blank' %>


<div class="page-title">
    <h1><%= @phase1.created_at.to_formatted_s(:long)  %></h1>
    <nav aria-label="You are here:" role="navigation">
      <ul class="breadcrumbs">
        <li><%= link_to 'Businesses',  businesses_path %></li>
        <li>
            <%= link_to @business.name, business_path(@business) %>
        </li>
        <li>
          <span class="show-for-sr">Current: </span> Phase 1
        </li>
      </ul>
    </nav>
</div>

<div class="row">
    <div class="medium-8 columns">
        <div class="callout card">
            <div class="callout-header">
                <div class ="float-right">
                    <%= link_to '<i class="fa fa-pencil fa-fw" aria-hidden="true"></i> Edit'.html_safe,  edit_business_phase1_path(@business, @phase1.id), class: "button secondary small" %>
                    <%= link_to '<i class="fa fa-trash fa-fw" aria-hidden="true"></i> Delete'.html_safe, "#", method: :delete, class: "button secondary small",  data: { confirm: "You sure?" } %>
                </div>
              
                <h4><i class="fa fa-bar-chart fa-fw" aria-hidden="true"></i> Phase 1</h4>
            </div>
            <div class="callout-table">
                
                <table>
                <tr>
                    <th class="narrow">Mobile friendly?</th>
                    <td><%= @phase1.mobileFriendly %></td>
                </tr>
                <tr>
                    <th class="narrow">www VS non-www</th>
                    <td><%= @phase1.wwwOrNot %></td>
                </tr>
                <tr>
                    <th class="narrow">NAP in the proper format?</th>
                    <td><%= @phase1.napFormat %></td>
                </tr>
                <tr>
                    <th class="narrow">robot.txt?</th>
                    <td><%= @phase1.robotsTXT %></td>
                </tr>
                </table>
            </div>
        </div>
        
        <%= render 'headers/headersByPhase' %>
        
    </div>
    
    <div class="medium-4 columns">
        <%= render 'headers/addHeaders' %>
    </div>
</div>